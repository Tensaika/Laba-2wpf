<Window x:Class="Laba_2_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laba_2_wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">
    <StackPanel Margin="10">
        <Label Content="Имя:"/>
        <TextBox x:Name="firstNameTextBox" Margin="0 5"/>
        <Label Content="Фамилия:"/>
        <TextBox x:Name="lastNameTextBox" Margin="0 5"/>
        <Button Content="Показать приветствие" Click="Button_Click" Margin="0 10"/>
    </StackPanel>
</Window>
